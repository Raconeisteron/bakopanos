<?xml version="1.0" encoding="utf-8" ?>

<unity>

  <typeAliases>

    <!-- Lifetime manager types -->
    <typeAlias alias="singleton"
               type="Microsoft.Practices.Unity.ContainerControlledLifetimeManager,Microsoft.Practices.Unity" />
    <typeAlias alias="perThread"
               type="Microsoft.Practices.Unity.PerThreadLifetimeManager,Microsoft.Practices.Unity" />
    <typeAlias alias="external"
               type="Microsoft.Practices.Unity.ExternallyControlledLifetimeManager,Microsoft.Practices.Unity" />
  </typeAliases>

  <containers>

    <container>

      <!-- Lifetime managers specified using the type aliases -->
      <types>
        <!---ServiceLayer-->
        <type name="Local"
              type="Evolutil.IModuleBuilder,Evolutil"
              mapTo="Evolutil.Services.ModuleBuilder,Evolutil.Services">
          <lifetime type="singleton" />
        </type>

        <!---DataLayer-->
        <type name="Linq"
              type="Evolutil.IModuleBuilder,Evolutil"
              mapTo="Evolutil.Data.Linq.ModuleBuilder,Evolutil.Data.Linq">
          <lifetime type="singleton" />
        </type>
        <type name="AdoNet"
              type="Evolutil.IModuleBuilder,Evolutil"
              mapTo="Evolutil.Data.AdoNet.ModuleBuilder,Evolutil.Data.AdoNet">
          <lifetime type="singleton" />
        </type>

      </types>

    </container>

    <!-- ... more containers here ... -->

  </containers>

</unity>

