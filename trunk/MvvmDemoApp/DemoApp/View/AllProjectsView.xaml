<UserControl x:Class="DemoApp.View.AllProjectsView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase">

    <DockPanel>
        
        <ListView ItemsSource="{Binding AllProjects}">
            
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Path=ProjectName}" />            
                </GridView>
            </ListView.View>
        </ListView>
        
    </DockPanel>
</UserControl>
