<UserControl x:Class="DemoApp.View.ProjectView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" HorizontalAlignment="Center" VerticalAlignment="Center" Width="400" >
    <Grid Margin="4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="6" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>        

        <!-- EMPTY -->        

        <!-- PROJECT NAME-->
        <Label Grid.Row="2" Grid.Column="0" Content="Project _name:" HorizontalAlignment="Right" Target="{Binding ElementName=projectNameTxt}" />
        <TextBox x:Name="projectNameTxt" Grid.Row="2" Grid.Column="2" Text="{Binding Path=ProjectName, UpdateSourceTrigger=PropertyChanged}" />
        
        <!-- EMPTY -->

        <!-- EMPTY -->

        <!-- EMPTY -->
        
    </Grid>

</UserControl>
